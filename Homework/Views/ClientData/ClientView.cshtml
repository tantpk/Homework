@model IEnumerable<Homework.Models.ClientView>

@{
    ViewBag.Title = "客戶資料統計";
}

<h2 class="text-center mt-2">客戶資料統計</h2>

<table class="table" id="clientView">
    <thead>
        <tr class="table-active">
            <th>
                @Html.DisplayNameFor(model => model.客戶名稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.聯絡人數量)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.銀行帳戶數量)
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.聯絡人數量)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.銀行帳戶數量)
            </td>
        </tr>
    }
    </tbody>
</table>
<script>
    $(document).ready(function () {        
        $('#clientView').DataTable({
            responsive: true
        });
    });
</script>
